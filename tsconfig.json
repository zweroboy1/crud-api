{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
  },
  "include": ["src/**/*.ts"],
}